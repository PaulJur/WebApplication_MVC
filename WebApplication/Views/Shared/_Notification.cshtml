@if (TempData["success"] != null) @* if the tempdata is a success after all changes in CategoryController, execute below *@
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

    <script type="text/javascript">
        toastr.success('@TempData["success"]');
    </script>
    @* Displays a notif/text that the operation wasa success based on the executed action that will remove itself after a refresh(1 request) *@
}
@if (TempData["error"] != null) 
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

    <script type="text/javascript">
        toastr.error('@TempData["success"]');
    </script>
}

